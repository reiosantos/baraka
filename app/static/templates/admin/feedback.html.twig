<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        {% for message in feedback %}
            <div class="card m-3 p-3">
                <div class="card-body">
                    <h5 class="card-title font-weight-bold">
                        {{ message.getUsername()|upper }} - {{ message.getLocation()|capitalize }}
                    </h5>
                    <p class="card-text">{{ message.getMessage() }}</p>
                    <span class="text-dark">{{ message.getDate() }}</span>
                    <a href="mailto:{{ message.getEmail() }}"
                       class="btn btn-sm btn-primary float-right">
                        Send mail to: {{ message.getEmail() }}
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
