{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="mb-5 mt-5 text-center top-text">Contact Us</h1>

    <div class="card card-body">
        <form class="form mx-auto mt-3" action="/feedback" method="post">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}"/>

            <fieldset class="form-group">
                <div class="row">
                    <legend
                        class="col-md-4 col-form-label pt-0 mx-auto mb-auto mt-auto font-weight-bold">
                        Reach out to us and we'll get back to you within 24 hours
                    </legend>
                    <div class="col-md-8">
                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 col-md-3 col-lg-3" for="name">Name</label>
                                <div class="col-sm-9 col-md-9 col-lg-9">
                                    <input type="text" class="form-control name"
                                           id="name" placeholder="name..." name="name"/>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 col-md-3 col-lg-3" for="email">Email:</label>
                                <div class="col-sm-9 col-md-9 col-lg-9">
                                    <input type="email" class="form-control email"
                                           placeholder="Email..." name="email">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 col-md-3 col-lg-3" for="location">
                                    Your Address:
                                </label>
                                <div class="col-sm-9 col-md-9 col-lg-9">
                                    <input type="text" class="form-control email"
                                           placeholder="Address..." name="location">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="row">
                                <label class="col-sm-3 col-md-3 col-lg-3" for="message">Your
                                    message</label>
                                <div class="col-sm-9 col-md-9 col-lg-9">
                                    <textarea class="form-control" name="message"
                                              placeholder="Please enter your message here..."
                                              rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <button type="submit" class="btn btn-primary btn-lg btn-block mb-3">Submit</button>
        </form>
    </div>

{% endblock %}
