{% extends 'base.html.twig' %}

{% block body %}

    {% include 'search.html.twig' %}

    <div class="card-columns ml-5 mr-5 mb-5">
        {% for song in songs %}
            {% set art = song.getAlbumArtName() %}
            {% set src = art ? song.getWebPath(song.getAlbumArtName()) : 'https://i.imgur.com/Mpj9ecV.jpg' %}

            <div class="card">
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-xl-5 col-sm-12 d-flex">
                        <img
                            class="img-thumbnail"
                            width="100%"
                            height="100%"
                            src="{{ src }}"
                            alt="Card image cap"/>
                    </div>
                    <div class="col-lg-7 col-md-7 col-xl-7 col-sm-12">
                        <div class="card-body">
                            <h4 class="card-title">{{ song.getName() }}</h4>
                            <p class="card-text">
                            <h5 class="text-uppercase font-weight-bold mb-2">
                                {{ song.getArtist().getName() }}
                            </h5>
                            Uploaded on <b>{{ song.getUploadDate() }}</b>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="/song/{{ song.getId() }}/download/" target="_blank"
                       class="text-primary">
                        Download
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
